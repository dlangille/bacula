									<prop:EmptyTemplate>
										<div class="file-browser-watermark">
											<%[ To add a file to restore please click 'Add' link or please drag here the file from the top frame or from the frame on the left. ]%>
										</div>
									</prop:EmptyTemplate>
									<com:TActiveTemplateColumn>
